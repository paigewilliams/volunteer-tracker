<h1>Volunteer Tracker</h1>

<form class="" action="/add_project" method="post">
  <label for="title">Title of the project:</label>
  <input type="text" name="title">
  <button type="submit" class="btn btn-warning" name="button">Create Project</button>
</form>

<% if @projects.any? %>
<h5>Projects:</h5>
<ul>
  <% @projects.each do |project| %>
  <li><a href="/project/<%= project.id %>"><%=project.title %></a></li>
  <% end %>
</ul>

<h3>Assign a volunteer</h3>

<form action="/add_volunteer" method="post">
  <label for="name">Volunteer Name:</label>
  <input required="true" type="text" name="name"><br>
  <label for="project">Project:</label>
  <select required="true" class="project" name="project">
    <% @projects.each do |project| %>
      <option value="<%= project.id %>"><%= project.title %></option>
    <% end %>
  </select>
  <button type="submit" class="btn btn-warning" name="button">Assign Volunteer</button>
</form>

<% if @volunteers.any? %>
<h5>Volunteers</h5>
<ul>
  <% @volunteers.each do |volunteer| %>
  <li><a href="/volunteer/<%= volunteer.id %>"><%=volunteer.name %></a></li>
  <% end %>
</ul>
<% end %>
<% end %>

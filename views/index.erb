<h1>Volunteer Tracker</h1>

<form class="" action="/add_project" method="post">
  <label for="title">Title of the project:</label>
  <input type="text" name="title">
  <button type="submit" name="button">Create Project</button>
</form>

<% if @projects.any? %>
<ul>
  <% @projects.each do |project| %>
  <li><a href="/project/<%= project.id %>"><%=project.title %></a></li>
  <% end %>
</ul>
<% end %>
